@page
@model Areas.Admin.Pages.CreateAdminModel
@{
    ViewData["Title"] = "Home page";
}
<div id="contact-modal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Create Article</h3>
                </div>
                <form enctype="multipart/form-data" method="post" role="form">
                    <div class="modal-body">                
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="rating">Category</label>
                            <select name="categories" class="form-control">
                                <option >Horror</option>
                                <option >Action</option>
                                <option >Thriller</option>
                                <option >Comedy</option>
                                <option >Adventure</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="file">URL Gambar</label>
                            <input type="file" name="url_img" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="author">Author</label>
                            @{
                                ViewBag.Name = ViewData["User"];
                                <input type="text" name="author" class="form-control" id="author" value=@ViewBag.Name>   
                             }
                        </div>
                        <div class="form-group">
                            <label for="message">Content</label>
                            <textarea name="content" class="form-control"></textarea>
                        </div>
                        @{
                            ViewBag.User = ViewData["UserId"];
                            <input type="text" name="userid" id="userid" value=@ViewBag.User hidden>
                         }                
                    </div>
                    <div class="modal-footer">                    
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-success" id="submit">
                    </div>
                </form>
            </div>
        </div>
    </div>