@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "/Pages/Shared/_LayoutUser.cshtml";
}


<!-- Blog Entries Column -->
      <div class="col-md-8">

        <h1 class="my-4">Articles
          <small>List Articles</small>
        </h1>

        @{
          ViewBag.Article = ViewData["Articles"];
          foreach(var art in ViewBag.Article)
          {
            <div class="card mb-4">
              <img class="card-img-top" src=@art.url_img alt="Card image cap" width="750px" height="300px">
              <div class="card-body">
                <h2 class="card-title">@art.title</h2>
                <div style="text-align: justify">
                  <span class="card-text" style="display: inline-block;text-overflow: ellipsis;word-wrap: break-word;overflow: hidden;max-height: 5.9em;line-height: 1.4em;" >@art.content</span>
                </div>
                <br></br>
                <a href="https://localhost:5001/Article?id=@art.id" class="btn btn-primary">Read More &rarr;</a>
              </div>
              <div class="card-footer text-muted">
                Posted on @art.created_at Author by @art.author 
                <br>
                Category
                <a href="#">@art.categories</a>
              </div>
            </div>
          }
        }
        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
          <li class="page-item">
            <a class="page-link" href="#">&larr; Older</a>
          </li>
          <li class="page-item disabled">
            <a class="page-link" href="#">Newer &rarr;</a>
          </li>
        </ul>
      </div>

      <!-- Sidebar Widgets Column -->
      <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card my-4">
          <h5 class="card-header">Search</h5>
          <div class="card-body">
            <div class="input-group">
              <input type="text" id="Search"class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-secondary" type="submit" onclick="javascript: search_btn()">Go!</button>
              </span>
            </div>
          </div>
        </div>

        <!-- Categories Widget -->
        <div class="card my-4">
          <h5 class="card-header">Categories</h5>
          <div class="card-body">
            <div class="row">
              <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                  <li>
                    <a href="#">Web Design</a>
                  </li>
                  <li>
                    <a href="#">HTML</a>
                  </li>
                  <li>
                    <a href="#">Freebies</a>
                  </li>
                </ul>
              </div>
              <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                  <li>
                    <a href="#">JavaScript</a>
                  </li>
                  <li>
                    <a href="#">CSS</a>
                  </li>
                  <li>
                    <a href="#">Tutorials</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Side Widget -->
        <div class="card my-4">
          <h5 class="card-header">Side Widget</h5>
          <div class="card-body">
            You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
          </div>
        </div>

      </div>

<script type="text/javascript">
  function search_btn()
    {
        var search = document.getElementById('Search').value;
        if(search != "")
        {
          var path = '/Index?Search='+search;
          window.location.href = path;
        }
        else{
          var path = '/';
          window.location.href = path;
        }
        
    }
</script>